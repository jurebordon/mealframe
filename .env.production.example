# MealFrame Production Environment Configuration
# Copy to .env and set real values before deploying.

# =============================================================================
# REQUIRED — Must be set before first deploy
# =============================================================================

# PostgreSQL password (use a strong, random value)
DB_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD

# =============================================================================
# Optional — Sensible defaults provided
# =============================================================================

# CORS allowed origins (the public URL users will access)
CORS_ORIGINS=https://mealframe.example.com

# API URL as seen by the browser (relative path when behind Nginx)
NEXT_PUBLIC_API_URL=/api/v1

# Host port Nginx binds to (80 for HTTP, use a reverse proxy or Cloudflare for TLS)
HOST_PORT=80

# Gunicorn worker count (2 × CPU cores + 1 is a good starting point)
GUNICORN_WORKERS=2

# Debug mode (NEVER enable in production)
DEBUG=false
